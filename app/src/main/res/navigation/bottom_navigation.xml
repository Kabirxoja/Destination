<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">


    <fragment
        android:id="@+id/navigation_test_choice"
        android:name="com.example.destination.ui.fragments.TestChoiceFragment"
        android:label="@string/nav_name_home"
        tools:layout="@layout/fragment_test_choice" >
        <action
            android:id="@+id/action_navigation_test_choice_to_testFragment"
            app:destination="@id/testFragment" />
        <action
            android:id="@+id/action_navigation_test_choice_to_testOptionFragment"
            app:destination="@id/testOptionFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.destination.ui.fragments.SearchFragment"
        android:label="@string/nav_name_search"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.destination.ui.fragments.HomeFragment"
        android:label="@string/nav_name_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_vocabularyFragment"
            app:destination="@id/vocabularyFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notes"
        android:name="com.example.destination.ui.fragments.NotesFragment"
        android:label="@string/nav_name_notes"
        tools:layout="@layout/fragment_notes" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.destination.ui.fragments.SettingsFragment"
        android:label="@string/nav_name_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_main"
        android:name="com.example.destination.ui.main.MainFragment"
        android:label="main"
        tools:layout="@layout/fragment_main" />
    <fragment
        android:id="@+id/vocabularyFragment"
        android:name="com.example.destination.ui.fragments.VocabularyFragment"
        android:label="fragment_vocabulary"
        tools:layout="@layout/fragment_vocabulary" />
    <fragment
        android:id="@+id/testFragment"
        android:name="com.example.destination.ui.fragments.TestWriteFragment"
        android:label="fragment_test"
        tools:layout="@layout/fragment_test_main" >
        <action
            android:id="@+id/action_testFragment_to_resultFragment"
            app:destination="@id/resultFragment"
            app:popUpTo="@id/navigation_test_choice" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.destination.ui.fragments.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" >
        <action
            android:id="@+id/action_resultFragment_to_testFragment"
            app:destination="@id/testFragment" />
        <action
            android:id="@+id/action_resultFragment_to_testOptionFragment"
            app:destination="@id/testOptionFragment" />
    </fragment>
    <dialog
        android:id="@+id/bottomSheetSpeaker"
        android:name="com.example.destination.ui.additions.BottomSheetSpeaker"
        android:label="fragment_bottom_sheet_speaker"
        tools:layout="@layout/fragment_bottom_sheet_speaker" />
    <dialog
        android:id="@+id/bottomSheetLanguage"
        android:name="com.example.destination.ui.additions.BottomSheetLanguage"
        android:label="fragment_bottom_sheet_language"
        tools:layout="@layout/fragment_bottom_sheet_language" />
    <fragment
        android:id="@+id/testOptionFragment"
        android:name="com.example.destination.ui.fragments.TestOptionFragment"
        android:label="fragment_test_option"
        tools:layout="@layout/fragment_test_option" >
        <action
            android:id="@+id/action_testOptionFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>
</navigation>