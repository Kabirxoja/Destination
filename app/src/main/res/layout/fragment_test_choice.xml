<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".ui.details.TestChoiceFragment"

    >

    <TextView
        android:id="@+id/text_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Test"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="32sp"
        android:textStyle="bold"


        />

    <ImageButton
        android:id="@+id/adjustment_button"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_below="@id/text_banner"
        android:layout_alignBottom="@id/start_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bac_curve"
        android:backgroundTint="@color/white"
        android:src="@drawable/settings_inactive"
        android:layout_marginTop="12dp"


        />

    <Button
        android:id="@+id/start_button"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@id/text_banner"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_toStartOf="@id/adjustment_button"
        android:background="@drawable/bac_curve"
        android:backgroundTint="@color/blue"
        android:text="Start"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="12dp"


        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/indicator_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/adjustment_button"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/recycle_indicator_item"


        />


</RelativeLayout>