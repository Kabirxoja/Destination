<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment"
    android:background="@color/light_gray"

    >

    <TextView
        android:id="@+id/text_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textSize="32sp"
        android:text="Settings"
        android:textColor="@color/gray"
        android:textStyle="bold"


        />

    <LinearLayout
        android:id="@+id/layout_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bac_curve"
        android:backgroundTint="@color/white"
        android:layout_marginHorizontal="16dp"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@id/text_banner"

        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_language"
            android:layout_gravity="center_vertical"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"

            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bac_curve"
        android:backgroundTint="@color/white"
        android:layout_marginHorizontal="16dp"
        android:padding="12dp"
        android:layout_below="@id/layout_language"
        android:layout_marginBottom="12dp"

        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_share"
            android:layout_gravity="center_vertical"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"

            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bac_curve"
        android:backgroundTint="@color/white"
        android:layout_marginHorizontal="16dp"
        android:padding="12dp"
        android:layout_below="@id/layout_share"
        android:layout_marginBottom="12dp"

        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_rate"
            android:layout_gravity="center_vertical"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"

            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bac_curve"
        android:backgroundTint="@color/white"
        android:layout_marginHorizontal="16dp"
        android:padding="12dp"
        android:layout_below="@id/layout_rate"
        android:layout_marginBottom="12dp"

        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_exit"
            android:layout_gravity="center_vertical"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"

            />


    </LinearLayout>

</RelativeLayout>