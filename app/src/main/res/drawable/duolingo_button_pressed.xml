<!-- res/drawable/button_pressed.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" />
            <corners android:radius="15dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" /> <!-- Even bottom padding -->
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#43A047" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
