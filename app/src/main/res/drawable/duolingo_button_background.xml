<!-- res/drawable/button_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" />  <!-- Button fill color -->
            <corners android:radius="15dp" />  <!-- Rounded corners -->
            <padding
                android:bottom="3dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" /> <!-- Thicker bottom -->
        </shape>
    </item>

    <!-- Inner background to keep text area consistent -->
    <item
        android:bottom="3dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#43A047" /> <!-- Slightly darker green -->
            <corners android:radius="12dp" />  <!-- Slightly smaller rounded corners -->
        </shape>
    </item>
</layer-list>
